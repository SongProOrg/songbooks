<h1>New Song</h1>
<% if @song.errors.any? %>
  <div>
    <h3><%= flash[:error] %></h3>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>

<% end %>
<%= form_with model: @song do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :artist %>
  <%= form.text_field :artist %>
  <%= form.label :body %>
  <%= form.text_area :body, size: "60x10" %>
  <%= form.submit %>
<% end %>

